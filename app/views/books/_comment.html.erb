<td><%= form_with model:[@book, @book_comment], local:true do |f| %>
            <%= f.text_area :comment, size: "40x5" %>
            <%= f.submit '送信' %>
            <% end %>
            </td>
            <table>
          <thead>
            <tr>
              <th>コメント投稿者</th>
              <th>コメント内容</th>
            </tr>
          </thead>
          <tbody>
            <% @book.book_comments.each do |book_comment| %>
              <tr>
                <td><%= link_to user_path(book_comment.user) do %>
                  <%= attachment_image_tag book_comment.user, :profile_image, size: "50x50", fallback: "no-image-icon.jpg" %>
                  <%= book_comment.user.name  %>
                  <% end %>
                </td>
                <td><%= book_comment.comment %></td>
                <% if book_comment.user_id == current_user.id %>
                <td><%= link_to "削除", book_book_comment_path(@book, book_comment), method: :delete %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>